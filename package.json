{
  "name": "septic-card",
  "version": "0.0.2",
  "type": "module",
  "author": "IoT7m",
  "repository": {
    "type": "git",
    "url": "https://github.com/iot7m/septic-card"
  },
  "scripts": {
    "build": "rollup -c",
    "docs": "typedoc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "start": "rollup -c --watch",
    "start:hass": "docker run --rm -p8123:8123 -v ./.hass:/config homeassistant/home-assistant:beta",
    "start:hass-dev": "docker run --rm -p8123:8123 -v ./.hass:/config homeassistant/home-assistant:dev",
    "start:hass-stable": "docker run --rm -p8123:8123 -v ./.hass:/config homeassistant/home-assistant:stable",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix --"
    ],
    "*.{js,ts,mjs,md,json,yaml,yml}": [
      "prettier --write --"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "custom-card-helpers": "^1.9.0",
    "eslint": "^9.39.2",
    "eslint-plugin-tsdoc": "^0.5.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "rollup": "^4.54.0",
    "rollup-plugin-serve": "^3.0.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "lit": "^3.3.2",
    "tslib": "^2.8.1"
  }
}
