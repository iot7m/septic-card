{
  "name": "ha-lit-card",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "lint": "npx eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky",
    "prettier": "npx prettier . --check",
    "prettier:fix": "npm run prettier -- --write",
    "build": "rollup -c --bundleConfigAsCjs",
    "start": "rollup -c --watch --bundleConfigAsCjs",
    "start:hass": "docker run --rm -p8123:8123 -v ./.hass:/config homeassistant/home-assistant:beta",
    "start:hass-dev": "docker run --rm -p8123:8123 -v ./.hass:/config homeassistant/home-assistant:dev",
    "start:hass-stable": "docker run --rm -p8123:8123 -v ./.hass:/config homeassistant/home-assistant:stable"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "custom-card-helpers": "^1.9.0",
    "rollup": "^4.54.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@stylistic/eslint-plugin": "^5.7.0",
    "apexcharts": "^5.3.6",
    "eslint-plugin-tsdoc": "^0.5.0",
    "lit": "^3.3.2",
    "rollup-plugin-serve": "^3.0.0",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.53.0"
  }
}
